<Project InitialTargets="ValidateGameDirectory">
    <Target Name="ValidateGameDirectory">
        <!-- validate GameDirectory property -->
        <Error
                Text="Game directory hasn't been specified! Specify it using '&lt;GameDirectory&gt;[GAME_DIR]&lt;/GameDirectory&gt;' in PropertyGroup of your project."
                Condition="'$(GameDirectory)' == ''"/>
        <Error
                Text="Specified game directory doesn't exist: '$(GameDirectory)'!"
                Condition="!Exists($(GameDirectory))"/>
    </Target>
</Project>