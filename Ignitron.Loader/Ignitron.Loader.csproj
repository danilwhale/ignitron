<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AssemblyName>Loader</AssemblyName>
    </PropertyGroup>

    <Import Project="$(MSBuildThisFileDirectory)..\build\CommonAssemblies.props"/>

    <ItemGroup>
        <ProjectReference Include="..\Ignitron.Loader.API\Ignitron.Loader.API.csproj"/>
    </ItemGroup>

    <Target Name="CopyBuildOutput" AfterTargets="AfterBuild">
        <ItemGroup>
            <BuildFiles Include="$(OutDir)\**\*.*"/>
        </ItemGroup>
        <Copy SourceFiles="@(BuildFiles)" DestinationFolder="$([System.IO.Path]::Combine('$(GameDirectory)', 'mods'))"/>
    </Target>

</Project>
